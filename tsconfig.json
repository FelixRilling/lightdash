{
    "compilerOptions": {
        "composite": true,
        "rootDir": "./src",
        "baseUrl": "./src",
        "target": "es2019",
        "newLine": "LF",
        "removeComments": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [],
    "exclude": ["node_modules"],
    "references": [
        {
            "path": "./src/tsconfig.esm.json"
        },
        {
            "path": "./src/tsconfig.cjs.json"
        }
    ]
}

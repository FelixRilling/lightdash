{
    "name": "lightdash",
    "version": "3.0.0",
    "description": "An utility library designed to be lightweight",
    "main": "dist/lightdash.common.js",
    "module": "dist/lightdash.esm.js",
    "constants": {
        "dirBase": {
            "input": "./src",
            "output": "./dist"
        },
        "js": {
            "input": "main.ts",
            "namespace": {
                "module": "_",
                "file": "lightdash"
            },
            "targets": {
                "browsers": "chrome >= 60"
            }
        }
    },
    "scripts": {
        "start": "npm-run-all lint build test docs",
        "build": "node tasks/jsDev.js",
        "dist": "node tasks/jsDist.js",
        "test": "jasmine",
        "lint": "tslint src/",
        "docs": "jsdoc -c jsdoc.json"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FelixRilling/lightdash.git"
    },
    "keywords": [
        "lightdash",
        "utility"
    ],
    "author": "Felix Rilling",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/FelixRilling/lightdash/issues"
    },
    "homepage": "https://github.com/FelixRilling/lightdash#readme",
    "devDependencies": {
        "babel-core": "^6.26.0",
        "babel-plugin-external-helpers": "^6.22.0",
        "babel-preset-env": "^1.6.1",
        "docdash": "^0.4.0",
        "jasmine": "^2.8.0",
        "jsdoc": "git+https://github.com/jsdoc3/jsdoc.git",
        "npm-run-all": "^4.1.2",
        "rollup": "^0.51.5",
        "rollup-plugin-babel": "^3.0.2",
        "rollup-plugin-typescript2": "^0.8.0",
        "rollup-plugin-uglify-es": "0.0.1",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "uglify-es": "^3.1.9"
    }
}

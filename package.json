{
    "name": "lightdash",
    "version": "10.2.1",
    "description": "A lightweight TypeScript utility library inspired by lodash",
    "main": "./dist/lightdash.common.js",
    "module": "./dist/lightdash.esm.js",
    "types": "./types/main.d.ts",
    "settings": {
        "namespace": {
            "module": "_l",
            "file": "lightdash"
        },
        "external": []
    },
    "scripts": {
        "start": "npm-run-all lint build test docs",
        "build": "rollup -c ./tasks/rollup.config.js",
        "build:iife": "rollup -c ./tasks/rollup.config.iife.js",
        "build:iife-min": "rollup -c ./tasks/rollup.config.iife-min.js",
        "build:test": "rollup -c ./tasks/rollup.config.test.js",
        "build:declarations": "tsc --build ./tasks/tsconfig.declarations.json",
        "watch": "rollup -c ./tasks/rollup.config.js --watch",
        "dist": "npm-run-all --parallel build build:iife build:iife-min build:declarations",
        "lint": "npm-run-all --parallel lint:ts",
        "lint:ts": "tslint ./src/**/*.ts ./spec/**/*.ts",
        "fix": "npm-run-all fix:ts fix:prettier",
        "fix:ts": "tslint ./src/**/*.ts ./spec/**/*.ts --fix",
        "fix:prettier": "prettier ./src/**/*.ts ./spec/**/*.ts --write",
        "test": "npm-run-all build:test test:jasmine",
        "test:jasmine": "jasmine",
        "docs": "jsdoc -c jsdoc.json"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FelixRilling/lightdash.git"
    },
    "keywords": [
        "lightdash",
        "utility"
    ],
    "author": "Felix Rilling",
    "contributors": [
        "Felix Rilling",
        "Tyler Roberts"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/FelixRilling/lightdash/issues"
    },
    "homepage": "https://github.com/FelixRilling/lightdash#readme",
    "dependencies": {},
    "devDependencies": {
        "@types/jasmine": "^3.3.9",
        "docdash": "^1.0.3",
        "jasmine": "^3.3.1",
        "jsdoc": "^3.5.5",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.16.4",
        "rollup": "^1.2.3",
        "rollup-plugin-node-resolve": "^4.0.1",
        "rollup-plugin-terser": "^4.0.4",
        "rollup-plugin-typescript2": "^0.19.2",
        "terser": "^3.16.1",
        "tslint": "^5.12.1",
        "typescript": "^3.3.3333"
    }
}
